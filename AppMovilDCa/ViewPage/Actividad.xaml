<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilDCa.ViewPage.Actividad">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Bienvenido, aquí podrás iniciar una nueva actividad"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
                <Button Text="Crear Actividad" x:Name="creaActividad" Clicked="creaActividad_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>